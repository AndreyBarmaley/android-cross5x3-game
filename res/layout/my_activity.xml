<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="myClickLayout"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical" >
    	
    	<ImageView
    	    android:id="@+id/imageSideAI"
    	    android:layout_width="@dimen/width_side_image"
    	    android:layout_height="match_parent"
    	    android:layout_gravity="top"
    	    android:contentDescription="@string/button_description"
    	    android:scaleType="fitCenter"
    	    android:src="@drawable/side_ai" />
        
        <TextView
            android:id="@+id/textViewRed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/height_score" />

    </LinearLayout>

    <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="3"
	    android:orientation="vertical" >
        
		<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:orientation="horizontal" >

    	<ImageView
    	    android:id="@+id/imageView0x0"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="2dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView1x0"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="2dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView2x0"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="2dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView3x0"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="2dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView4x0"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="2dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:orientation="horizontal" >
    	
    	<ImageView
    	    android:id="@+id/imageView0x1"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />
    	
    	<ImageView
    	    android:id="@+id/imageView1x1"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />
    	
    	<ImageView
    	    android:id="@+id/imageView2x1"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />
    	
    	<ImageView
    	    android:id="@+id/imageView3x1"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />
    	
    	<ImageView
    	    android:id="@+id/imageView4x1"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="1dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />
    	
	</LinearLayout>

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center_horizontal"
	    android:orientation="horizontal" >

    	<ImageView
    	    android:id="@+id/imageView0x2"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="2dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView1x2"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="2dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView2x2"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="2dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView3x2"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="2dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

    	<ImageView
    	    android:id="@+id/imageView4x2"
    	    android:layout_width="@dimen/height_button"
    	    android:layout_height="@dimen/height_button"
    	    android:layout_marginBottom="2dp"
    	    android:layout_marginLeft="1dp"
    	    android:layout_marginRight="1dp"
    	    android:layout_marginTop="1dp"
    	    android:contentDescription="@string/button_description"
    	    android:onClick="myClickButtons"
    	    android:src="@drawable/mark_null" />

		</LinearLayout>
	
	</LinearLayout>

        <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:orientation="vertical" >
    	
    	<ImageView
    	    android:id="@+id/imageSideHuman"
    	    android:layout_width="@dimen/width_side_image"
    	    android:layout_height="match_parent"
    	    android:layout_gravity="top"
    	    android:contentDescription="@string/button_description"
    	    android:scaleType="fitCenter"
    	    android:src="@drawable/side_human" />
        
        <TextView
            android:id="@+id/textViewBlue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/blue"
            android:textSize="@dimen/height_score" />

    </LinearLayout>

</LinearLayout>
